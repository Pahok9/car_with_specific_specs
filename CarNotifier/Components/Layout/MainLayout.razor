@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row">
            <form @onsubmit="Search" class="search-form">
                <input type="search" @bind="searchQuery" placeholder="Search..." />
                <button type="submit">Search</button>
            </form>
            <a href="https://tesla.com/" target="_blank">About</a>
        </div>

        <article class="header">
            @Body
        </article>
        <div class="landing-page">
            <div class="landing-page-button-container">
                <h1>Model S</h1>
                <button class="landing-page-button1" type="button" ></button>
            </div>
            <div class="landing-page-button-container">
                <h1>Model 3</h1>
                <button class="landing-page-button2" type="button"></button>
            </div>
            <div class="landing-page-button-container">
                <h1>Model X</h1>
                <button class="landing-page-button3" type="button"></button>
            </div>
            <div class="landing-page-button-container">
                <h1>Model Y</h1>
                <button class="landing-page-button4" type="button"></button>
            </div>
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string searchQuery = string.Empty;

    private void Search()
    {
        // Implement your search logic here
        // Navigate to a search results page or filter data on the current page
    }
}